<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/home_iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/spacing_15"
            android:paddingRight="@dimen/spacing_15"
            android:src="@drawable/ic_menu" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/home_tv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/spacing_10"
            android:layout_marginLeft="@dimen/spacing_10"
            android:layout_toEndOf="@+id/home_iv_menu"
            android:layout_toRightOf="@+id/home_iv_menu"
            android:text="All Notes"
            android:textAppearance="@style/CustomTextAppearance.Bold"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18"
            android:textStyle="bold"
            tools:text="All Notes" />


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/home_iv_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/spacing_15"
            android:paddingRight="@dimen/spacing_15"
            android:src="@drawable/ic_search" />


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/home_iv_sort"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/spacing_15"
            android:paddingRight="@dimen/spacing_15"
            android:src="@drawable/ic_sort" />

    </RelativeLayout>

    <View
        android:id="@+id/vwShadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_3"
        android:background="@drawable/shadow_gradient" />
</LinearLayout>